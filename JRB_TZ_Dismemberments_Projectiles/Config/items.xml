<TZ_Dismemberments_Projectiles>

<!-- Ammo -->

<!-- Shotgun -->
	<remove xpath="/items/item[contains(@name, 'Shell') or contains(@name, 'Slug')]/effect_group[@name='Base Effects']/passive_effect[@name='DismemberChance']" />
		<!-- Limbs -->
	<append xpath="/items/item[contains(@name, 'Shell')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="0.5" tags="leg,arm"/>
	</append>
		<!-- Head -->
	<append xpath="/items/item[contains(@name, 'Shell')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head"/>
	</append>
		<!-- Slug -->
	<append xpath="/items/item[contains(@name, 'Slug')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head,leg,arm"/>
	</append>
<!-- Blunderbuss -->
	<remove xpath="/items/item[contains(@name, 'Blunderbuss')]/effect_group[@name='Base Effects']/passive_effect[@name='DismemberChance']" />
		<!-- Limbs -->
	<append xpath="/items/item[contains(@name, 'Blunderbuss')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="0.3" tags="leg,arm"/>
	</append>
		<!--Head -->
	<append xpath="/items/item[contains(@name, 'Blunderbuss')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head"/>
	</append>
<!-- All Bullets -->
	<append xpath="/items/item[contains(@name, 'Bullet')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head"/>
	</append>
<!-- Arrows -->
	<append xpath="/items/item[contains(@name, 'Arrow')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head"/>
	</append>
<!-- Bolts -->
	<append xpath="/items/item[contains(@name, 'Bolt')]/effect_group[@name='Base Effects']">
		<passive_effect name="DismemberChance" operation="base_set" value="1" tags="head"/>
	</append>
	
	
</TZ_Dismemberments_Projectiles>